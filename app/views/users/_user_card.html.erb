<div class="col-md-10 card mb-3 mx-auto">
  <div class="card-body d-flex flex-column flex-md-row align-items-center">
    <div class="col-12 col-md-9 d-flex flex-row">
      <!-- アイコン -->
      <div class="col-4 col-md-4 d-flex justify-content-center">
        <%= image_tag user.profile.avatar, class: 'img-fluid', style: 'width: 100px; height: 100px;' %>
      </div>

      <!-- 詳細 -->
      <div class="col-8 col-md-5">
          <h5 class="card-title">
            <%= link_to user.profile.name, user_path(user), class: 'text-decoration-none text-dark' %>
          </h5>
          <p class="card-text mb-2">年齢: <%= age(user.profile.birthday) %>歳</p>
          <p class="card-text">誕生日: <%= user.profile.birthday.strftime('%Y年%m月%d日') if user.profile.birthday %></p>
      </div>
    </div>

    <!-- フレンドコードとボタン -->
    <div class="col-12 col-md-3 ms-auto d-flex flex-row flex-md-column align-items-end justify-content-between mt-2 mt-md-0">
      <p class="card-text border border-2 m-0 p-1 mb-md-4" style="font-size: 0.8rem;">フレンドコード：<%= user.friend_code %></p>
      <% if user != current_user %>
        <div id="button_container_<%= user.id %>">
          <%= render 'users/toggle_button', user: user %>
        </div>
      <% end %>
    </div>
  </div>
</div>