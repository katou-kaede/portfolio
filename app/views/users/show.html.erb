<div class="container-fluid bg-body-tertiary min-vh-100">
  <div class="row mx-4">
    <h2 class="col-12 my-4">マイページ</h2>
    <div class="col-12 mb-4">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div class="bg-white p-4 d-flex col-10 mb-3 mb-md-0">
          <div class="mx-4" style="width: 100px; height: 100px; overflow: hidden; position: relative;">
            <%# if @profile.avatar.present? %>
              <img src="<%= asset_path(@profile.avatar) %>" alt="User Avatar" class="img-fluid" style="object-fit: cover; position: absolute;">
            <%# else %>
              <!--<img src="<%# asset_path('default-avatar.png') %>" alt="Default Avatar" class="rounded-circle" style="width: 100px; height: 100px;">
              <div class="rounded-circle bg-secondary" style="width: 100px; height: 100px;"></div>-->
            <%# end %>
          </div>
          <div class="d-flex flex-column mx-4 justify-content-between">
            <div class="d-flex">
              <h5 class="card-text fw-normal"><%= @profile.name %></h5>
              <p class="card-text mx-4">年齢: <%= age(@profile.birthday) %>歳</p>
              <p class="card-text">誕生日: <%= @profile.birthday.strftime('%Y年%m月%d日') if @profile.birthday.present? %></p>
            </div>
            <div>
              <p class="card-text">ひとこと: <%= @profile.bio.present? ? @profile.bio : "まだ入力されていません" %></p>
            </div>
          </div>
        </div>
        <div class="d-flex flex-column mx-3">
          <a href="<%= edit_user_registration_path %>" class="btn btn-secondary mb-2">アカウント設定</a>
          <a href="<%= edit_user_path(@user) %>" class="btn btn-secondary">プロフィール編集</a>
        </div>
      </div>
    </div>

    <div class="col-12 mt-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="mt-4">主催のイベント一覧</h5>
        <div class="mx-3">
          <a href="<%= new_event_path %>" class="btn btn-primary">+ イベント作成</a>
        </div>
      </div>
      <div class="event-list">
        <% if @events.present? %>
          <% @events.each do |event| %>
            <% if event.hosted_by?(current_user) %>
              <%= render 'events/event_card', event: event %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <%= paginate @events, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>