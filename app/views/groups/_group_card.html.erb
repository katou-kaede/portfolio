<div class="col-md-10 card mb-3 mx-auto">
  <div class="card-body d-flex justify-content-between">
    <div>
      <h5 class="card-title">
        <%= link_to "#{group.name}", group_path(group), class: 'text-decoration-none text-dark' %>
      </h5>
      <p class="card-text">メンバー数: <%= group.group_members.count %>人</p>
    </div>
    <div class="d-flex align-items-end">
      <%= button_to edit_group_path(group), method: :get, class: 'btn p-0 border-0 mx-3' do %>
        <i class="bi bi-pencil-fill d-block mx-auto mb-1" style="font-size: 1.5rem;"></i>
      <% end %>
      <%= button_to group_path(group), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'btn p-0 border-0' do %>
        <i class="bi bi-trash3-fill d-block mx-auto mb-1" style="font-size: 1.5rem;"></i>
      <% end %>
    </div>
  </div>
</div>